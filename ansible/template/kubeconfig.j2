apiVersion: v1
clusters:
- cluster:
    certificate-authority-data: {{ ca_crt | b64encode }}
    server: https://server.kubernetes.local:6443
  name: kubernetes-the-hard-way
contexts:
- context:
    cluster: kubernetes-the-hard-way
    user: {{ user }}
  name: default
current-context: default
kind: Config
preferences: {}
users:
- name: {{ user }}
  user:
    client-certificate-data: {{ client_crt | b64encode }}
    client-key-data: {{ client_key | b64encode }}
